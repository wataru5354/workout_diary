<div class="sticky-top">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <%= link_to(root_path ,class:"navbar-brand fs-3 d-flex") do %>
        <%= image_tag "musle.png", :size => "50x50" %>
        <span class="fs-3">WorkoutDiary</span>
      <% end %>
      <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent" >
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <% if user_signed_in?%>          
            <li class="nav-item">
              <%= link_to '自分の日記を見る',user_path(current_user.id) ,class:"nav-link active" %>
            </li>
            <li class="nav-item">
              <%=link_to '頻度カレンダーを見る',user_calendars_path(current_user),class:"nav-link" %>
            </li>
          <% end %>
        </ul>
        <%=form_with(url: search_diaries_path, local: true, method: :get, class:"d-flex") do |f| %>
          <%= f.text_field :keyword, class:"form-control", placeholder:"検索" %>
          <%= image_submit_tag "search.svg", class:"btn btn-outline-primary" %>
        <% end %>
      </div>
    </div> 
  </nav>
  <div class="d-grid gap-2 bg-light d-flex justify-content-end pe-2 pb-2">
    <% if user_signed_in? %>
      <div class="pt-2 me-2 fw-bold">
        <%= current_user.nickname %>
      </div>
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-outline-primary" %>
    <% else %>
      <%= link_to 'ログイン', new_user_session_path , class:"btn btn-primary me-md-2" %>
      <%= link_to '新規登録', new_user_registration_path,  class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
